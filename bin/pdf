#! /bin/bash

if [ $# -eq 0 ]
  then
    echo "Usage: pdf <path to presentation>"
    exit
fi

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
SLIDES=$(python -c 'import os,sys;print(os.path.realpath(sys.argv[1]))' $1)

cd ${DIR}
./setup

NAME=$(python2.7 -c "import os.path; print '-'.join(os.path.relpath('${SLIDES}','${DIR}').split(os.sep))")

docker run --privileged -it -v ${SLIDES}:/slides/ aquilia "/pdf" > "${SLIDES}/index2.pdf"
